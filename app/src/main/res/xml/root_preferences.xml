<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/general_settings_header">

        <SwitchPreference
            app:iconSpaceReserved="false"
            app:key="theme"
            app:title="@string/dark_theme_settings"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/speed_units"
            app:entryValues="@array/speed_units"
            app:iconSpaceReserved="false"
            app:key="speed_unit"
            app:title="@string/speed_unit_settings"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/speed_resolutions"
            app:entryValues="@array/speed_resolutions"
            app:iconSpaceReserved="false"
            app:key="speedometer_resolution"
            app:title="@string/speed_resolution_settings"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:entries="@array/distance_units"
            app:entryValues="@array/distance_units"
            app:iconSpaceReserved="false"
            app:key="distance_unit"
            app:title="@string/distance_unit_settings"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/warning_settings_header">

        <SwitchPreference
            app:iconSpaceReserved="false"
            app:key="vibration"
            app:title="@string/vibration_settings"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>